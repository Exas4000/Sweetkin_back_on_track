{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/base.json",
  "cards": [
    {
      "id": "Sw_FrontClerk",
      "names": {
        "english": "Front Clerk",
        "chinese": "前台"
      },
      "card_art": "@CardArt_unit_25",
      "cost": 1,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@ClassSweetkin",
      "unlock_level": 1,
      "targets_room": true,
      "effects": [
        "@SpawnFrontClerk"
      ],
      "lore_tooltips": [
        {
          "english": "Sweetkins working in the lobby are fluent in dozen of languages. They send various patrons on their journey within the sweetkin's spa."
        }
      ],
      "pools": [
        "UnitsAllBanner"
      ]
    },
    {
      "id": "AbilityFrontClerk",
      "names": {
        "english": "Check in",
        "chinese": "登记"
      },
      "descriptions": {
        "english": "Summon a random <b>VIP</b> unit. Delay 1",
        "chinese": "随机召唤 1 个<b>贵宾</b>单位。战斗开始时有 1 回合冷却。"
      },
      "is_an_ability": true,
      "cooldown": 2,
      "initial_cooldown": 1,
      "targetless": true,
      "targets_room": false,
      "card_type": "spell",
      "effects": [
        "@ClerkCheckIn"
      ]
    }
  ],
  "characters": [
    {
      "id": "FrontClerk",
      "size": 2,
      "attack_damage": 0,
      "health": 10,
      "names": {
        "english": "Front Clerk",
        "chinese": "前台"
      },
      "character_art": "@FrontClerkArt",
      "chatter": "@CTR_frontClerk",
      "subtypes": [
        "@Sub_Spicy",
        "@Sub_Staff",
        "SubtypesData_BannerUnit"
      ],
      "ability": "@AbilityFrontClerk"
    },
    {
      "id": "templateVIP",
      "size": 2,
      "attack_damage": 1,
      "health": 1,
      "names": {
        "english": "Random VIP"
      },
      "character_art": "@FrontClerkArt"
    }
  ],
  "effects": [
    {
      "id": "SpawnFrontClerk",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "target_card_type": "spell",
      "param_character": "@FrontClerk"
    },
    {
      "id": "ClerkCheckIn",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "target_team": "monsters",
      "param_character": "@templateVIP",
      "param_character_pool": [
        "@VIPimp",
        "@VIPlatebloomer",
        "@VIPsocialite",
        "@VIPcookie",
        "@VIPcritic",
        "@VIPnugget",
        "@VIPvirologist",
        "@Rosette",
        "@Vip_temaki"
      ]
    }
  ],
  "sprites": [
    {
      "id": "CardArt_unit_25",
      "path": "textures/CardAssets/Unit_25.png"
    },
    {
      "id": "FrontClerkArt",
      "path": "textures/UnitAssets/DeskClerk.png"
    }
  ],
  "game_objects": [
    {
      "id": "CardArt_unit_25",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@CardArt_unit_25"
        }
      }
    },
    {
      "id": "FrontClerkArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@FrontClerkArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.3,
              "z": 0
            },
            "scale": {
              "x": 1.5,
              "y": 1.5,
              "z": 1.5
            }
          }
        }
      }
    }
  ],
  "chatter": [
    {
      "id": "CTR_frontClerk",
      "gender": "male",
      "added_expressions": [
        {
          "english": "Now open to customers!"
        },
        {
          "english": "Welcome on Haven's tour!"
        }
      ],
      "idle_expressions": [
        {
          "english": "On the right you can see..."
        },
        {
          "english": "Don't mind the titan induced corruption, we are helping fix that."
        },
        {
          "english": "Are you here for the Dinner Spectacle?"
        }
      ]
    }
  ]
}