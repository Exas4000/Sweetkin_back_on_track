{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/schemas/cards.json",
  "cards": [
    {
      "id": "Sw_VipTemaki",
      "names": {
        "english": "Beyonder's Temaki",
        "chinese": "超越寿司"
      },
      "card_art": "@CardArt_unit_19",
      "cost": 1,
      "card_type": "monster",
      "cost_type": "default",
      "rarity": "rare",
      "class": "@ClassSweetkin",
      "unlock_level": 2,
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnTemaki"
        }
      ],
      "lore_tooltips": [
        {
          "english": "Requesting to be turned into exquisite cuisine is not the worst thing a Beyonder could ask as a way to relax."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "Vip_temaki",
      "size": 1,
      "attack_damage": 4,
      "health": 4,
      "names": {
        "english": "Beyonder's Temaki",
        "chinese": "超越寿司"
      },
      "can_attack": true,
      "can_be_healed": true,
      "character_art": "@VIPtemakiArt",
      "chatter":"@CTR_temaki",
      "subtypes": [
        "SubtypesData_Snack",
        "@Sub_Vip"
      ],
      "starting_status_effects": [
        {
          "status": "eatmany",
          "count": 4
        }
      ],
      "triggers": [
        {
          "id": "@eatTemaki"
        }
      ]
    }
  ],
  "upgrades": [
  {
      "id": "eatStatTemaki",
      "bonus_hp": 11,
      "bonus_damage": 11
    }
  ],
  "character_triggers": [
    {
      "id": "eatTemaki",
      "trigger": "on_eaten",
      "descriptions": {
        "english": "Eater gains 11[attack] and 11[health] and <b>Retreat</b> them",
        "chinese": "吞食者获得 +11[attack]，+11[health]，并[retreat]。"
      },
      "effects": [
        {
            "id": "@ApplyStat_temaki"
        },
        {
            "id": "@FEARTHETEMAKI"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnTemaki",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "target_card_type": "spell",
      "param_character": "@Vip_temaki"
    },
    {
      "id": "ApplyStat_temaki",
      "name": "CardEffectAddTempCardUpgradeToUnits",
      "target_mode": "last_feeder_character",
      "param_upgrade": "@eatStatTemaki"
    },
    {
        "id": "FEARTHETEMAKI",
      "name": "CardEffectFloorRearrange",
      "param_int": 1,
      "target_mode": "last_feeder_character",
      "target_team": "monsters",
      "target_subtype": "SubtypesData_None"
    }
  ],
  "sprites": [
    {
      "id": "CardArt_unit_19",
      "path": "textures/CardAssets/Unit_19.png"
    },
    {
      "id": "VIPtemakiArt",
      "path": "textures/UnitAssets/MT_sushi.png"
    }
  ],
  "game_objects": [
    {
      "id": "CardArt_unit_19",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@CardArt_unit_19"
        }
      }
    },
    {
      "id": "VIPtemakiArt",
      "type": "character_art",
      "extensions": {
          "character_art": {
              "sprite": "@VIPtemakiArt",
              "transform": {
                  "position": {
                      "x": 0,
                      "y": 1.3,
                      "z": 0
                  },
                  "scale": {
                      "x": 1.5,
                      "y": 1.5,
                      "z": 1.5
                  }
              }
          }
      }
  }
  ],
  "chatter": [
    {
      "id":"CTR_temaki",
      "gender": "neutral",
      "added_expressions":[
        {
          "english":"Look! I'm a three-eyed sushi!"
        }
      ],
      "idle_expressions":[
        {
          "english":"Will you be my new host?"
        },
        {
          "english":"Terrifyingly delicious!"
        }
      ]
    }
  ]
}