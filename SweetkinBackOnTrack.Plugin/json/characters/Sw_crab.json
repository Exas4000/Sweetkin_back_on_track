{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/schemas/cards.json",
  "cards": [
    {
      "id": "Sw_Crab",
      "names": {
        "english": "Crab Cake",
        "chinese": "蟹肉饼"
      },
      "card_art": "@CardArt_unit_15",
      "cost": 1,
      "card_type": "monster",
      "rarity": "common",
      "class": "@ClassSweetkin",
      "targets_room": true,
      "effects": [
        {
          "id": "@SpawnCrabCake"
        }
      ],
      "lore_tooltips": [
        {
          "english": "The Sweetkin have several morsel like creature and yet the smaller ones seems to have been designed for consumption rather than manual labor. This makes them a lot less useful than the umbra workforce."
        }
      ],
      "pools": [
        "MegaPool"
      ]
    }
  ],
  "characters": [
    {
      "id": "CrabCake",
      "size": 1,
      "attack_damage": 2,
      "health": 1,
      "names": {
        "english": "Crab Cake",
        "chinese": "蟹肉饼"
      },
      "character_art": "@CrabArt",
      "chatter": "@CTR_morsels",
      "subtypes": [
        "@Sub_Minty",
        "SubtypesData_Snack"
      ],
      "starting_status_effects": [
        {
          "status": "eatmany",
          "count": 1
        }
      ],
      "triggers": [
        {
          "id": "@Eat_crab"
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "Eat_crab",
      "trigger": "on_eaten",
      "descriptions": {
        "english": "Eater gains [armor] [effect0.status0.power]",
        "chinese": "吞食者获得[armor] [effect0.status0.power]。"
      },
      "effects": [
        {
          "id": "@ApplyStatus_CrabCake"
        }
      ]
    }
  ],
  "effects": [
    {
      "id": "SpawnCrabCake",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "target_card_type": "spell",
      "param_character": "@CrabCake"
    },
    {
      "id": "ApplyStatus_CrabCake",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "last_feeder_character",
      "target_team": "monsters",
      "param_status_effects": [
        {
          "status": "armor",
          "count": 20
        }
      ]
    }
  ],
  "sprites": [
    {
      "id": "CardArt_unit_15",
      "path": "textures/CardAssets/Unit_15.png"
    },
    {
      "id": "CrabArt",
      "path": "textures/UnitAssets/crabcake.png"
    }
  ],
  "game_objects": [
    {
      "id": "CardArt_unit_15",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@CardArt_unit_15"
        }
      }
    },
    {
      "id": "CrabArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@CrabArt",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.3,
              "z": 0
            },
            "scale": {
              "x": 1.5,
              "y": 1.5,
              "z": 1.5
            }
          }
        }
      }
    }
  ],
  "chatter": [
    {
      "id": "CTR_morsels",
      "gender": "male",
      "added_expressions": [
        {
          "english": "*Flop*"
        },
        {
          "english": "*squish*"
        }
      ],
      "idle_expressions": [
        {
          "english": "*Does puppy eyes*"
        },
        {
          "english": "*Runs around*"
        }
      ]
    }
  ]
