{
  "$schema": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/schemas/cards.json",
  "cards": [
    {
        "id": "Sw_VIPsocialite",
        "names": {
          "english": "Wicker Socialite"
        },
        "card_art_reference": "@CardArt_unit_23",
        "cost": 1,
        "type": "monster",
        "cost_type": "default",
        "rarity": "rare",
        "class": "@ClassSweetkin",
        "unlock_level": 0,
        "targets_room": true,
        "effects": [
          {
            "id": "@SpawnVIPsocialite"
          }
        ],
        "lore_tooltips": [
          {
            "english": "The most luxurious and dangerous ride in all of limbo! Something she will be able to gossip about to all her wicker friends."
          }
        ],
        "pools": [
          "UnitsAllBanner"
        ]
      }
  ],
  "upgrades": [
    {
        "id": "VIPReformUpgrade",
        "status_effect_upgrades": [
            {
                "status": "ephemeral",
                "count": 1
            }
        ]
    }
  ],
  "characters": [
    {
        "id": "VIPsocialite",
        "size": 2,
        "attack_damage": 30,
        "health": 10,
        "names": {
          "english": "Wicker Socialite"
        },
        "can_attack": true,
        "can_be_healed": true,
        "character_art": "@VIPsocialiteArt",
        "subtypes": [
          "SubtypesData_None"
        ],
        "triggers": [
          {
            "id": "@SocialiteEntry"
          },
          {
            "id": "@SocialiteExit"
          }
        ]
      }
  ],
  "character_triggers": [
    {
      "id": "SocialiteExit",
      "trigger": "on_death",
      "descriptions": {
        "english": "Reform a random unit."
      },
      "effects": [
        {
            "id": "@SocialiteReform"
        }
      ]
    },
    {
        "id": "SocialiteEntry",
        "trigger": "on_spawn_not_from_card",
        "descriptions": {
          "english": "Reform a random unit."
        },
        "effects": [
          {
              "id": "@SocialiteReform"
          }
        ]
      }
  ],
  "effects": [
    {
      "id": "SpawnVIPsocialite",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "target_card_type": "spell",
      "param_character_data": "@VIPsocialite"
    },
    {
      "id": "SocialiteReform",
      "name": "CardEffectRecursion",
      "target_mode": "room",
      "target_card_type": "monster",
      "param_int": 1,
      "param_upgrade": "@VIPReformUpgrade"
    }
  ],
  "sprites": [
    {
        "id": "CardArt_unit_23",
        "path": "textures/CardAssets/Unit_23.png"
    },
    {
      "id": "VIPsocialiteArt",
      "path": "textures/UnitAssets/MT_Socialite.png"
    }
  ],
  "game_objects": [
    {
      "id": "CardArt_unit_23",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@CardArt_unit_23"
        }
      }
    },
    {
      "id": "VIPsocialiteArt",
      "type": "character_art",
      "extensions": {
          "character_art": {
              "sprite": "@VIPsocialiteArt",
              "transform": {
                  "position": {
                      "x": 0,
                      "y": 1.3,
                      "z": 0
                  },
                  "scale": {
                      "x": 1.5,
                      "y": 1.5,
                      "z": 1.5
                  }
              }
          }
      }
  }
  ]
}